<div id="<%= dom_id sale %>" class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Detalles de la Venta</h3>
    <p class="mt-1 max-w-2xl text-sm text-gray-500">Informaci√≥n detallada de la venta #<%= sale.id %></p>
  </div>
  <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
    <dl class="sm:divide-y sm:divide-gray-200">
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500">Prenda</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <div class="font-medium"><%= sale.clothing_item.name %></div>
          <div class="text-sm text-gray-500">
            Talle: <%= sale.clothing_item.size %> | 
            Color: <%= sale.clothing_item.color %>
          </div>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500"><%= t("sales.price") %></dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <div class="font-medium"><%= number_to_currency(sale.price) %></div>
          <% if sale.price != sale.clothing_item.price %>
            <div class="text-xs text-gray-500 line-through"><%= t("sales.original_price") %>: <%= number_to_currency(sale.clothing_item.price) %></div>
          <% end %>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500"><%= t("sales.buyer") %></dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= sale.buyer_name %>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500"><%= t("sales.delivery_address") %></dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= sale.address %>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500"><%= t("sales.delivery_status") %></dt>
        <dd class="mt-1 text-sm sm:mt-0 sm:col-span-2">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            <%= case sale.delivery_status
                when 'pending' then 'bg-yellow-100 text-yellow-800'
                when 'in_transit' then 'bg-blue-100 text-blue-800'
                when 'delivered' then 'bg-green-100 text-green-800'
                else 'bg-gray-100 text-gray-800'
                end %>">
            <%= t("sales.delivery_status.#{sale.delivery_status}", default: sale.delivery_status&.titleize) %>
          </span>
        </dd>
      </div>
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class="text-sm font-medium text-gray-500"><%= t("sales.created_at") %></dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          <%= l(sale.created_at, format: :long) %>
        </dd>
      </div>
    </dl>
  </div>
</div>
