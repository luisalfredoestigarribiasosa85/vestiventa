<%= form_with(model: clothing_item, class: "max-w-lg mx-auto bg-white p-8 rounded-xl shadow-md space-y-6") do |form| %>
  <% if clothing_item.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6">
      <h2 class="font-bold mb-2"><%= pluralize(clothing_item.errors.count, "error") %> no permitieron guardar esta prenda:</h2>
      <ul class="list-disc ml-6">
        <% clothing_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6">
    <div>
      <%= form.label :name, "Nombre del Producto", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition #{clothing_item.errors[:name].any? ? 'border-red-400' : 'border-gray-300'}" %>
    </div>

    <div>
      <%= form.label :size, "TamaÃ±o", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :size, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition #{clothing_item.errors[:size].any? ? 'border-red-400' : 'border-gray-300'}" %>
    </div>

    <div>
      <%= form.label :color, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :color, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition #{clothing_item.errors[:color].any? ? 'border-red-400' : 'border-gray-300'}" %>
    </div>

    <div>
      <%= form.label :price, "Precio", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :price, class: "block w-full rounded-md border px-3 py-2 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition #{clothing_item.errors[:price].any? ? 'border-red-400' : 'border-gray-300'}" %>
    </div>

    <div>
