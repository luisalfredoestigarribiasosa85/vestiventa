    </div>

    <div class="flex items-center space-x-2">
      <%= form.checkbox :sold, class: "h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <%= form.label :sold, "Vendido", class: "text-sm font-medium text-gray-700" %>
    </div>
  </div>

  <div class="mt-6">
    <%= form.submit "Crear Prenda", class: "w-full rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow transition" %>
  </div>
<% end %>
