<% content_for :title, "Prendas" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Prendas</h1>
    <%= link_to "AÃ±adir nueva Prenda", new_clothing_item_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="clothing_items" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @clothing_items.any? %>
      <% @clothing_items.each do |clothing_item| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render clothing_item %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Ver Prenda", clothing_item, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Editar Prenda", edit_clothing_item_path(clothing_item), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Eliminar Prenda", clothing_item, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Estas seguro?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No hay prendas.</p>
    <% end %>
  </div>
</div>
